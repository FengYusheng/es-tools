{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "requests.cache.enable": true,
    "index.store.type": "niofs",
    "index.search.slowlog.threshold.query.warn": "10s",
    "index.search.slowlog.threshold.query.info": "5s",
    "index.search.slowlog.threshold.query.debug": "2s",
    "index.search.slowlog.threshold.query.trace": "500ms",
    "index.search.slowlog.threshold.fetch.warn": "1s",
    "index.search.slowlog.threshold.fetch.info": "800ms",
    "index.search.slowlog.threshold.fetch.debug": "500ms",
    "index.search.slowlog.threshold.fetch.trace": "200ms",
    "index.refresh_interval": "1s",
    "index.max_result_window": 100000,
    "index.merge.policy.expunge_deletes_allowed": 0,
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "standard",
            "icu_folding",
            "lowercase"
          ]
        },
        "chinese_analyzer": {
          "tokenizer": "standard",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "cjk_width",
            "lowercase"
          ]
        },
        "korean_analyzer": {
          "tokenizer": "unigram",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "lowercase"
          ]
        },
        "lower_analyzer": {
          "tokenizer": "keyword",
          "position_increment_gap": 512,
          "filter": [
            "icu_folding",
            "lowercase"
          ]
        },
        "norm_lower_analyzer": {
          "tokenizer": "keyword",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces",
            "compact_spaces"
          ],
          "filter": [
            "icu_folding",
            "lowercase"
          ]
        },
        "en_std": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "standard",
            "icu_folding",
            "lowercase"
          ]
        },
        "en_std_lem": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "standard",
            "icu_folding",
            "lowercase",
            "en_lemmatization"
          ]
        },
        "en_std_syn": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "standard",
            "icu_folding",
            "lowercase",
            "en_synonym"
          ]
        },
        "en_std_lem_syn": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "standard",
            "icu_folding",
            "lowercase",
            "en_lemm_synonym"
          ]
        },
        "en_std_synaddress": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "standard",
            "icu_folding",
            "lowercase",
            "en_synonym_address"
          ]
        },
        "ar_std_lem": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "icu_folding",
            "lowercase",
            "arabic_stemmer"
          ]
        },
        "ar_std": {
          "tokenizer": "whitespace",
          "position_increment_gap": 512,
          "char_filter": [
            "to_spaces"
          ],
          "filter": [
            "icu_folding",
            "lowercase"
          ]
      }
      },
      "tokenizer": {
        "unigram": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "1",
          "token_chars": [
            "letter",
            "digit"
          ]
      }
      },
      "char_filter": {
        "to_spaces": {
          "type": "mapping",
          "mappings_path": "fds4-compat.txt"
        },
        "compact_spaces": {
          "type": "pattern_replace",
          "pattern": "\\s+",
          "replacement": " "
        }
      },
      "filter": {
        "arabic_stemmer": {
          "type":       "stemmer",
          "language":   "arabic"
        },
        "russian_folding": {
          "type": "icu_folding",
          "unicodeSetFilter": "[Ñ‘]"
        },
        "en_lemmatization": {
          "type": "synonym",
          "synonyms_path": "en_lem.txt"
        },
        "en_synonym": {
          "type": "synonym",
          "synonyms_path": "en_syn.txt"
        },
        "en_lemm_synonym": {
          "type": "synonym",
          "synonyms_path": "en_lem_syn.txt"
        },
        "en_synonym_address": {
          "type": "synonym",
          "synonyms_path": "en_synonyms_address.txt"
        }
      }
    }
  },
